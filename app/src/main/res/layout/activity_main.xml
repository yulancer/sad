<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.yulancer.sad.MainActivity">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layoutWater"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Switch
                        android:id="@+id/swPump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:checked="false"
                        android:text="Насос" />

                    <Switch
                        android:id="@+id/swGardenWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:checked="false"
                        android:text="Вода в сад" />

                    <Switch
                        android:id="@+id/swSaunaWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/swGardenWater"
                        android:checked="false"
                        android:text="Вода в баню" />

                    <Switch
                        android:id="@+id/swPond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/swPump"
                        android:checked="false"
                        android:text="Пруд" />

                    <CheckBox
                        android:id="@+id/cbPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/swPond"
                        android:checked="false"
                        android:clickable="false"
                        android:text="Давление" />

                    <CheckBox
                        android:id="@+id/cbIsNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/cbPressure"
                        android:checked="false"
                        android:clickable="false"
                        android:text="Темно" />

                    <CheckBox
                        android:id="@+id/cbIsRain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/cbIsNight"
                        android:checked="false"
                        android:clickable="false"
                        android:text="Дождь" />

                    <CheckBox
                        android:id="@+id/cbIsFrost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/cbIsRain"
                        android:checked="false"
                        android:clickable="false"
                        android:text="Мороз" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutDrain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textView" />

                    <CheckBox
                        android:id="@+id/cbValve1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded1"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 1" />

                    <CheckBox
                        android:id="@+id/cbValve2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded2"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 2" />

                    <CheckBox
                        android:id="@+id/cbValve3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded3"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 3" />

                    <CheckBox
                        android:id="@+id/cbValve4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded4"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 4" />

                    <CheckBox
                        android:id="@+id/cbValve5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded5"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 5" />

                    <CheckBox
                        android:id="@+id/cbValve6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded6"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 6" />

                    <CheckBox
                        android:id="@+id/cbValve7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded7"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 7" />

                    <CheckBox
                        android:id="@+id/cbValve8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etLitersNeeded8"
                        android:layout_alignParentStart="true"
                        android:checked="false"
                        android:text="Линия 8" />

                    <EditText
                        android:id="@+id/etLitersNeeded1"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded2"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded1"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded3"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded2"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded4"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded3"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded5"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded4"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded6"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded5"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded7"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded6"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/etLitersNeeded8"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/etLitersNeeded7"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="4" />

                    <ru.yulancer.sad.ProgressTextView
                        android:id="@+id/pbDrain1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="4dp"
                        android:layout_toEndOf="@id/cbValve1"
                        android:layout_toStartOf="@+id/etLitersNeeded1"
                        android:background="@drawable/progress_background"
                        android:gravity="center" />

                    <ProgressBar
                        android:id="@+id/pbDrain2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded1"
                        android:layout_toEndOf="@id/cbValve2"
                        android:layout_toStartOf="@+id/etLitersNeeded2" />

                    <ProgressBar
                        android:id="@+id/pbDrain3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded2"
                        android:layout_toEndOf="@id/cbValve3"
                        android:layout_toStartOf="@+id/etLitersNeeded3" />

                    <ProgressBar
                        android:id="@+id/pbDrain4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded3"
                        android:layout_toEndOf="@id/cbValve4"
                        android:layout_toStartOf="@+id/etLitersNeeded4" />


                    <ProgressBar
                        android:id="@+id/pbDrain5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded4"
                        android:layout_toEndOf="@id/cbValve5"
                        android:layout_toStartOf="@+id/etLitersNeeded5" />

                    <ProgressBar
                        android:id="@+id/pbDrain6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded5"
                        android:layout_toEndOf="@id/cbValve6"
                        android:layout_toStartOf="@+id/etLitersNeeded6" />

                    <ProgressBar
                        android:id="@+id/pbDrain7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded6"
                        android:layout_toEndOf="@id/cbValve7"
                        android:layout_toStartOf="@+id/etLitersNeeded7" />

                    <ProgressBar
                        android:id="@+id/pbDrain8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etLitersNeeded7"
                        android:layout_toEndOf="@id/cbValve8"
                        android:layout_toStartOf="@+id/etLitersNeeded8" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layoutSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium Text 3"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvException"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal|right"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvLastSuccessfulQuery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="Данные на \??:\??:\??"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <FrameLayout
                android:layout_width="40dip"
                android:layout_height="40dip">

                <ImageView
                    android:id="@+id/ivConnectStatus"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="connect"
                    android:src="@drawable/ic_connect" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
