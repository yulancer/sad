<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bar_background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="#66bb6a"
                android:centerY="0.75"
                android:endColor="#388e3c"
                android:startColor="#b2ff59" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#1976d2"
                    android:centerY="0.75"
                    android:endColor="#01579b"
                    android:startColor="#90caf9" />
            </shape>
        </clip>
    </item>

</layer-list>
